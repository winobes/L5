if (current_level == 0) {
	
	ALLEGRO_BITMAP *background = al_load_bitmap("gfx/space_background.png");

	level[0].width = 1000;
	level[0].height = 500;

	level[0].background_buffer = al_create_bitmap(level[0].width, level[0].height);
	level[0].background = al_create_bitmap (level[0].width, level[0].height);

	al_set_target_bitmap(level[0].background);
	//if we need to tile the background, do it here.
	al_draw_bitmap(background, 0,0 ,0);
	al_set_target_backbuffer(display);
	al_destroy_bitmap(background);


	level[0].nsubjects = 6;
	level[0].subject = malloc(level[0].nsubjects * sizeof(struct Subject));

	for (i = 0; i < level[0].nsubjects; i++) {
		level[0].subject[i].wall = false; //unless specified assume it's not a wall
	}

	//initializing walls
	level[0].subject[0].x = 0;
	level[0].subject[0].y = 0;
	level[0].subject[0].width = 980;
	level[0].subject[0].height = 20;
	level[0].subject[0].sprite = al_load_bitmap("gfx/wall0.png");
	level[0].subject[0].wall = true;
	
	level[0].subject[1].x = 980;
	level[0].subject[1].y = 0;
	level[0].subject[1].width = 20;
	level[0].subject[1].height = 480;
	level[0].subject[1].sprite = al_load_bitmap("gfx/wall1.png");
	level[0].subject[1].wall = true;

	level[0].subject[2].x = 20;
	level[0].subject[2].y = 480;
	level[0].subject[2].width = 980;
	level[0].subject[2].height = 20;
	level[0].subject[2].sprite = al_load_bitmap("gfx/wall0.png");
	level[0].subject[2].wall = true;

	level[0].subject[3].x = 0;
	level[0].subject[3].y = 20;
	level[0].subject[3].width = 20;
	level[0].subject[3].height = 480;
	level[0].subject[3].sprite = al_load_bitmap("gfx/wall1.png");
	level[0].subject[3].wall = true;

	level[0].subject[4].x = 200;
	level[0].subject[4].y = 250;
	level[0].subject[4].width = 600;
	level[0].subject[4].height = 100;
	level[0].subject[4].sprite = al_load_bitmap("gfx/wall3.png");
	level[0].subject[4].wall = true;	

	level[0].subject[5].x = 750;
	level[0].subject[5].y = 320;
	level[0].subject[5].width = 40;
	level[0].subject[5].height = 30;
	level[0].subject[5].sprite = al_load_bitmap("gfx/hole.png");
	level[0].subject[5].wall = true;

	player.x = 50;
	player.y = 50;
}







if (current_level == 1) {

	al_destroy_bitmap(level[previous_level].background);
	al_destroy_bitmap(level[previous_level].background_buffer);

	for (i = 0; i < level[previous_level].nsubjects; i++) {
		al_destroy_bitmap(level[previous_level].subject[i].sprite);

	}

	level[1].width = 620;
	level[1].height = 120;

	ALLEGRO_BITMAP *background1 = al_load_bitmap("gfx/crate_floor1.png");
	ALLEGRO_BITMAP *background2 = al_load_bitmap("gfx/crate_floor2.png");
	ALLEGRO_BITMAP *background3 = al_load_bitmap("gfx/crate_floor3.png");
	
	level[1].background_buffer = al_create_bitmap(level[1].width, level[1].height);
	level[1].background = al_create_bitmap (level[1].width, level[1].height);

	al_set_target_bitmap(level[1].background);
	//if we need to tile the background, do it here.
	for (i = 0; i < 4; i++) {
		if (i == 0) {k = 0;}
		if (i == 1) {k = 1;}
		if (i == 2) {k = 0;}
		if (i == 3) {k = 1;}
		for (j = 0; j < 24; j++) {
			if (k == 0) {
				k = 1;
				al_draw_bitmap(background1, 10+j*25, 10+i*25 ,0);
			}
			else if (k == 1) {
				k = 2;
				al_draw_bitmap(background3, 10+j*25, 10+i*25,0);
			}
			else {
				k = 0;
				al_draw_bitmap(background2, 10+j*25,10+i*25 ,0);
			}
			
		}
	}
	al_set_target_backbuffer(display);
	al_destroy_bitmap(background1);
	al_destroy_bitmap(background2);
	al_destroy_bitmap(background3);

	level[1].nsubjects = 4 ;
	level[1].subject = malloc(level[1].nsubjects * sizeof(struct Subject));

	for (i = 0; i < level[1].nsubjects; i++) {
		level[1].subject[i].wall = false; //unless specified assume it's not a wall
	}


	level[1].subject[0].x = 0;
	level[1].subject[0].y = 0;
	level[1].subject[0].width = 620;
	level[1].subject[0].height = 10;
	level[1].subject[0].sprite = al_load_bitmap("gfx/wall4.png");
	level[1].subject[0].wall = true;

	level[1].subject[1].x = 610;
	level[1].subject[1].y = 10;
	level[1].subject[1].width = 10;
	level[1].subject[1].height = 100;
	level[1].subject[1].sprite = al_load_bitmap("gfx/wall5.png");
	level[1].subject[1].wall = true;

	level[1].subject[2].x = 0;
	level[1].subject[2].y = 110;
	level[1].subject[2].width = 620;
	level[1].subject[2].height = 10;
	level[1].subject[2].sprite = al_load_bitmap("gfx/wall4.png");
	level[1].subject[2].wall = true;

	level[1].subject[3].x = 0;
	level[1].subject[3].y = 10;
	level[1].subject[3].width = 10;
	level[1].subject[3].height = 100;
	level[1].subject[3].sprite = al_load_bitmap("gfx/wall5.png");
	level[1].subject[3].wall = true;
	player.x = 580;
	player.y = 90;
	
}






